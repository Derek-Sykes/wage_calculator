<main>
    
    <% if (userId) { %>
        <!-- if your logged in this is your home page -->
        <div class="text">
            <h4>Hello <%= first_name %></h4>
            <h4>Welcome to the Wage Calculator website!</h4><br>
            <p>Would you like to enter a job and find out more things?</p>
            <% if(jobs.length){ %>
                <% for(job of jobs){ %>
                    <p><%= job.payRate %></p>
                <% } %>
            <% }else{ %>
                <p>No jobs found</p>
            <% } %>
            <form action="/enter-job" method="get">
                <button type="submit" >Enter Job</button>
            </form>
            
        </div>
        
        <div class="sidebar">
            <p>What would you like to find out about your job?</p>
            <p>How much am i...</p>
            <button onclick="location.href='/tax'">getting taxed</button>
            <button onclick="location.href='/predict'">getting per check</button>
            <button onclick="location.href='/bag'">needing to work to get X money</button>
            <button onclick="location.href='/hourly'">making per hour</button>
        </div>

   <% } else { %>
       <!-- if your not logged in this is your home page -->
           <p>Hello!</p> <br>
           <p>Welcome to the Wage Calculator website!</p>
           <p>What would you like to find out about your job?</p>
           <p>How much am i...</p>
           <button onclick="location.href='/tax'">getting taxed</button>
           <button onclick="location.href='/predict'">getting per check</button>
           <button onclick="location.href='/bag'">needing to work to get X money</button>
           <button onclick="location.href='/hourly'">making per hour</button>
   <% } %>
</main>
